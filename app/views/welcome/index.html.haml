- content_for :title, 'Welcome Page'
.site-wrapper
  .site-wrapper-inner
    .cover-container
      .masthead.clearfix
        .inner
          %h3.masthead-brand= t(".Sportify")
          %ul.nav.masthead-nav
            - if user_signed_in?
              %li
                = "You are logged in as #{current_user.email}"
              %li.active
                = link_to t('navigation.logout'), destroy_user_session_path, :method=>'delete'
            - else
              %li.active
                %a{:href => "#"}= t(".home")
              %li
                %a{:href => events_path }= t(".events")
              %li
                %a{:href => "#"}= t(".about_us")
              %li
                %a{:href => "#"}= t(".contact")
      .inner.covery
        %h1.cover-heading= t(".demo_application")
        %p.lead= t(".demo_app_description")
        %p.lead
          - if user_signed_in?
            %a.btn.btn-lg.btn-primary{:href => events_url}= t(".go_to_events")
          - else
            %a.btn.btn-lg.btn-primary{:href => new_user_session_path}= t(".sign_in")
      .mastfoot
        .inner
          %p
            = t(".all_rights_reserved")
            = succeed "," do
              %a.test-auto-prefixer{:href => "#"}= t(".generic")

:javascript
  RailsFoo.welcome.setup()
